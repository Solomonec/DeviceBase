@using System.Web.Helpers
@model  DeviceBase.ViewModels.DeviceStatisticsViewModel
@{
    ViewBag.Title = "Devices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="statistic-controlpanel">
    
@using (Html.BeginForm(Html.BeginForm("Devices", "Statistics", FormMethod.Post, new { style="margin:0; padding:0" })))
{
    
    <div style="float: left">
        <div class="export-modal-context-select">
            @Html.DropDownListFor(x => x.CurrentDeviceClass, Model.DeviceClasses, "Выберите класс...");
        </div>   
    </div>
    <div style="float: left">
        <div class="export-modal-context-select">
            @Html.DropDownListFor(x => x.CurrentDepartment, Model.Departments, "Выберите подразделение...");
        </div>
    </div>
    <div style="float: left">
        <div class="export-modal-context-select">
            @Html.DropDownListFor(x => x.CurrentLocation, Model.Locations, "Выберите площадку...");
        </div>
    </div>

    <div style="float: left">
        <input type="submit" class="statistic-button" value="Выбрать" />
    </div>

}   

</div>

<div id="grid" style="clear: both">

    <table class="grid-style">
        <thead class="grid-header">
            <tr>
                <td width="100px">&nbsp;</td>
                <td>Устройтво</td>
                <td width="200px">Количество</td>
                
            </tr>
        </thead>
        <tbody class="grid-row">
            @if (Model.Statistics != null)
            {
                foreach (var device in Model.Statistics)
                {
                    <tr>
                        <td>&nbsp;</td>
                        <td>@device.DeviceType</td>
                        <td>@device.Quantity</td>
                    </tr>


                }

            }
            else
            {
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div style="height: 40px;">
    &nbsp;
</div>
